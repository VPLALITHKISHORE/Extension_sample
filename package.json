{
  "name": "baseline-guard",
  "displayName": "BaselineGuard - AI-Powered Web Compatibility",
  "description": "AI-powered real-time web features compatibility checker with Gemini integration",
  "version": "2.0.0",
  "publisher": "BaselineHelper",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "web compatibility",
    "baseline",
    "browser support",
    "ai assistant",
    "gemini"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/VPLALITHKISHORE/Extension_sample"
  },
  "bugs": {
    "url": "https://github.com/VPLALITHKISHORE/Extension_sample/issues"
  },
  "homepage": "https://github.com/VPLALITHKISHORE/Extension_sample#readme",
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "baselineGuard.hello",
        "title": "Hello BaselineGuard",
        "category": "BaselineGuard"
      },
      {
        "command": "baselineGuard.openDashboard",
        "title": "Open Compatibility Dashboard",
        "category": "BaselineGuard"
      },
      {
        "command": "baselineGuard.refresh",
        "title": "Refresh Web Features Data",
        "category": "BaselineGuard"
      },
      {
        "command": "baselineGuard.analyzeFile",
        "title": "Analyze Current File",
        "category": "BaselineGuard"
      },
      {
        "command": "baselineGuard.toggle",
        "title": "Toggle BaselineGuard",
        "category": "BaselineGuard"
      },
      {
        "command": "baselineGuard.setupGeminiKey",
        "title": "Setup Gemini API Key",
        "category": "BaselineGuard"
      },
      {
        "command": "baselineGuard.generateFix",
        "title": "Generate AI Fix",
        "category": "BaselineGuard"
      },
      {
        "command": "baselineGuard.showWebview",
        "title": "Show Interactive Dashboard",
        "category": "BaselineGuard",
        "icon": "$(graph)"
      },
      {
        "command": "baselineGuard.debugApi",
        "title": "Debug Api",
        "category": "BaselineGuard"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "baselineGuard",
          "title": "BaselineGuard",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "baselineGuard": [
        {
          "type": "webview",
          "id": "baselineGuard.dashboardView",
          "name": "Compatibility Dashboard"
        }
      ]
    },
    "configuration": {
      "title": "BaselineGuard",
      "properties": {
        "baselineGuard.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable BaselineGuard extension"
        },
        "baselineGuard.enableAI": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered suggestions with Gemini"
        },
        "baselineGuard.minimumConfidence": {
          "type": "number",
          "default": 0.6,
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Minimum confidence threshold for feature detection"
        },
        "baselineGuard.showHints": {
          "type": "boolean",
          "default": true,
          "description": "Show hints for widely supported features"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node esbuild.js --production",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.19.19",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.7.0"
  }
}
